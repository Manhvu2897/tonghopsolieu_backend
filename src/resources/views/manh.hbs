<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
      {{> header}}
    {{> mainsidebar}}
<div class="content-wrapper">
    <section class="content-header">
    <h1>
        Báo cáo
      </h1>
    <ol class="breadcrumb">     
        <li class="active">Báo cáo</li>
    </ol>
    </section>
    <section class="content">
        <div class="col-xs-6">
            <div class="box">
            <div class="box-header">
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-12">
                    <form method="post" action="/manageFile/store" enctype="multipart/form-data">
                         <div class="form-group has-feedback">
                            <input type="text" class="form-control" placeholder="Tên báo cáo" name="reportName">
                            <span class="fa fa-file form-control-feedback"></span>
                        </div>  

                        <div class="form-group has-feedback form-group row">
                            <div class="col-md-1">
                                <label  class="lbl_sel">Tuần: </label>
                            </div>
                            <div class="col-md-3">
                                <select  class=" combo_team form-control" name="week">                          
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                </select>
                            </div>

                            <div class="col-md-1">
                                <label  class="lbl_sel">Tháng: </label>
                            </div>
                            <div class="col-md-3">
                                <select  class=" combo_team form-control" name="month">                          
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                                <option value="11">11</option>
                                <option value="12">12</option>
                                </select>
                            </div>

                            <div class="col-md-1">
                                <label class="lbl_sel">Năm: </label>
                            </div>
                            <div class="col-md-3">
                                <select class="combo_team form-control" name="year">
                                <option value="2020">2020</option>
                                <option value="2021">2021</option>
                                <option value="2022">2022</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-2" for="exampleInputFile">File báo cáo:</label>
                            <input class="col-md-10" type="file" id="exampleInputFile" name="rp_path">
                        </div>
                        
                        <div class="row row_btn">
                            <div class="col-md-6 col_btn">
                                <button type="submit" class="btn btn-primary btn-block btn-flat btn_login">Thêm báo cáo</button>
                            </div>
                            <!-- /.col -->
                            <div class="col-md-6 col_btn">
                                <a href="/manh" class="btn btn-primary btn-block btn-flat btn_login">Hủy</a>
                            </div>
                            <!-- /.col -->
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.box-body -->
            </div>
           
        </div>
    </section>
</div>

          
    </div>
</body>
</html>