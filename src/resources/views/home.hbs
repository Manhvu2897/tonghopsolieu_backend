<script>
       let myChart = document.getElementById('lineChart').getContext('2d');
       let myChart2 = document.getElementById('barChart').getContext('2d')
       let myChart3 = document.getElementById('pieChart').getContext('2d')
       let myChart4 = document.getElementById('areaChart').getContext('2d')

       Chart.defaults.global.defaultFontFamily = 'Georgia';
       Chart.defaults.global.defaultFontSize = 18;
       Chart.defaults.global.defaultFontColor = '#777';

       let massPopChart = new Chart(myChart, {
      type:'line', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
      data:{
        labels:['Changmi', 'Kaixin', 'TKBooks', 'Saiwai', 'McBooks', 'Kinh Doanh'],
